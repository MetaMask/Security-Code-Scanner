{
  "compilerOptions": {
    "lib": [
      "es6"
    ],
    "target": "es6",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "extends": "@tsconfig/node21/tsconfig.json",
}